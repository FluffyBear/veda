### HEADER ###

v-l:Header
	rdf:type owl:Class ;
	rdfs:label "footer"@en ;
	rdfs:label "нижний колонтитул"@ru ;
.
v-s:hasImage
	rdfs:domain v-l:Header ;
.
v-l:HeaderTemplate
	rdf:type v-ui:ClassTemplate ;
	rdfs:label "Header template"@en ;
	rdfs:label "Шаблон колонтитула"@ru ;
	v-ui:forClass v-l:Header ;
	v-ui:template """
<nav role="navigation" class="navbar" id="navigation">
	<div class="container-fluid" id="nav-container">
		<button type="button" class="btn btn-info navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
			<span class="glyphicon glyphicon-menu-hamburger"></span>
		</button>
		<a class="navbar-brand" href="#" about="@" rel="v-s:hasImage" template="v-ui:ImageSimpleTemplateWithoutBorder"></a>
		<div class="collapse navbar-collapse" id="navbar-collapse">
			<p class="navbar-text" id="current-individual"></p>
			<div id="user-menu"></div>
			<ul class="nav navbar-nav navbar-right">
				<li id="user-info"></li>
				<li class="dropdown" about="v-l:MainMenu" template="v-l:MenuTemplate"></li>
			</ul>
			<div class="navbar-right btn-group" id="preferred-language"></div>
		</div>
	</div>
</nav>
<script>
	var languageTemplate = $("#language-template").html();
	var userInfo = $("#user-info", template);
	var languageSelector = $("#preferred-language", template);

	// Render languages
	var languages = "";
	Object.keys(veda.user.availableLanguages).map ( function (language_uri) {
		languages += riot.render(languageTemplate, veda.user.availableLanguages[language_uri]);
	});
	languageSelector.html(languages);
	
	// Render user
	userInfo.empty();
	var userTmpl = new veda.IndividualModel("v-ui:IconPersonTemplate");
	veda.user.present(userInfo, userTmpl);

	var $languages = $("label", languageSelector);
	$languages.each( function() {
		if (this.id in veda.user.language) $(this).addClass("active");
		$(this).on("click", function() { 
			veda.user.toggleLanguage(this.id);
			location.reload();
			//this.id in veda.user.language ? $(this).addClass("active") : $(this).removeClass("active");
		});
	});
</script>
	"""
.

