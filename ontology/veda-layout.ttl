### MAIN PAGE ###

v-l:MainPage
	rdf:type owl:Class ;
	rdfs:subClassOf owl:Thing ;
	rdfs:label "Page"@en ;
	rdfs:label "Страница"@ru ;
.
v-l:MainPageTemplate
	rdf:type v-ui:ClassTemplate ;
	rdfs:label "Шаблон для класса Страница"@ru ;
	rdfs:label "Template for Page class"@en ;
	v-ui:forClass v-l:MainPage ;
	v-ui:template """
<div class="page">
	<nav role="navigation" class="navbar navbar-veda">
		<div class="container-fluid">
			<div class="navbar-header">
				<button type="button" class="btn btn-info navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
					<span class="glyphicon glyphicon-menu-hamburger"></span>
				</button>
				<a class="navbar-brand" href="#/"><img src="/img/veda-logo.png"></a>
			</div>
			<div class="collapse navbar-collapse" id="navbar-collapse">
				<div id="user-menu"></div>
				<ul class="nav navbar-nav navbar-right">
					<li id="user-info"></li>
					<li id="menu" class="dropdown" about="v-l:MainMenu" template="v-l:MenuTemplate"></li>
				</ul>
				<div class="navbar-right btn-group" id="preferred-language"></div>
			</div>
		</div>
	</nav>

	<div id="main" class="container-fluid" about="v-l:Welcome"></div>

	<nav style="min-height:12px;" class="navbar navbar-fixed-bottom" id="copyright">
		<footer>
			<div class="container-fluid clearfix" style="background-color: white; border-top: 1px solid lightgray">
				<div class="pull-left">
					<a href="http://www.semantic-machines.com">© <span about="v-l:SemanticMachines" property="rdfs:label"></span>.</a>
					<span about="v-l:License" property="rdfs:label"></span>
					<a alt="GNU General Public License version 3 official text" href="http://www.gnu.org/licenses/gpl.html">GPLv3.</a>
				</div>
				<div class="pull-right text-muted" about="v-s:vedaInfo">
					<span><span property="v-s:appBuildVersion"></span>/ <span property="v-s:appBuildDate"></span></span>
				</div>
			</div>
		</footer>
	</nav>
</div>
<script>
	var languageTemplate = $("#language-template").html();
	var userInfo = $("#user-info", template);
	var languageSelector = $("#preferred-language", template);

	// Render languages
	var languages = "";
	Object.keys(veda.user.availableLanguages).map ( function (language_uri) {
		languages += riot.render(languageTemplate, veda.user.availableLanguages[language_uri]);
	});
	languageSelector.html(languages);

	// Render user
	userInfo.empty();
	var userTmpl = new veda.IndividualModel("v-ui:IconPersonTemplate");
	veda.user.present(userInfo, userTmpl);

	var $languages = $("label", languageSelector);
	$languages.each( function() {
		if (this.id in veda.user.language) $(this).addClass("active");
		$(this).on("click", function() {
			veda.user.toggleLanguage(this.id);
			location.reload();
			//this.id in veda.user.language ? $(this).addClass("active") : $(this).removeClass("active");
		});
	});
</script>
  """ ;
.

### MENU ###

v-l:Menu
	rdf:type owl:Class ;
	rdfs:subClassOf owl:Thing ;
	rdfs:label "Menu"@en ;
	rdfs:label "Меню"@ru ;
.
v-l:menuItem
	rdf:type owl:ObjectProperty ;
	rdfs:label "Menu item"@en ;
	rdfs:label "Пункт меню"@ru ;
	rdfs:domain v-l:Menu ;
	rdfs:range v-l:Menu ;
.
v-l:action
	rdf:type owl:DatatypeProperty ;
	rdfs:label "Action"@en ;
	rdfs:label "Действие"@ru ;
	rdfs:domain v-l:Menu ;
	rdfs:range xsd:string ;
.
v-l:staticLink
	rdf:type owl:DatatypeProperty ;
	rdfs:label "Static link"@en ;
	rdfs:label "Статическая ссылка"@ru ;
	rdfs:domain v-l:Menu ;
	rdfs:range xsd:string ;
.
v-l:objectLink
	rdf:type owl:ObjectProperty ;
	rdfs:label "Link to individual"@en ;
	rdfs:label "Ссылка на индивид"@ru ;
	rdfs:domain v-l:Menu ;
	rdfs:range rdfs:Resource ;
.
v-l:MenuItemViewTemplate
	rdf:type v-ui:ClassTemplate ;
	rdfs:label "Menu item template"@en ;
	rdfs:label "Шаблон пункта Меню"@ru ;
	v-ui:template """
<li class="hidden">
	<a id="lnk">
		<span property="rdfs:label"></span>
	</a>
</li>
<li rel="v-l:objectLink" class="hidden">
	<a href="#/@">
		<span property="rdfs:label"></span>
	</a>
</li>
<li role="presentation" class="dropdown hidden">
	<a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false">
		<span property="rdfs:label"></span> <span class="caret"></span>
	</a>
	<ul class="dropdown-menu" role="menu" rel="v-l:menuItem" template="v-l:MenuItemViewTemplate"></ul>
</li>
<li class="divider"></li>
<script>
	var stcTmpl = template.eq(0), objTmpl = template.eq(1), subTmpl = template.eq(2), divTmpl = template.eq(3);
	if (individual.id === "v-l:Divider") {
		stcTmpl.remove();
		objTmpl.remove();
		subTmpl.remove();
		return;
	} else {
		divTmpl.remove();
	}
	if (individual.hasValue("v-l:menuItem")) {
		stcTmpl.remove();
		objTmpl.remove();
	} else {
		subTmpl.remove();
		if (individual.hasValue("v-l:staticLink")) {
			objTmpl.remove();
			var lnk = $("#lnk", stcTmpl);
			lnk.attr("href", individual["v-l:staticLink"][0])
			   .click(function (e) {
					if (individual.hasValue("v-l:action")) {
						e.preventDefault();
						var action = new Function("veda", individual["v-l:action"][0]);
						action(veda);
					}
			   });
		} else {
			stcTmpl.remove();
		}
	}
	template.toggleClass("hidden show");
</script>
	"""
.
v-l:MenuTemplate
	rdf:type v-ui:ClassTemplate ;
	rdfs:label "Menu class template"@en ;
	rdfs:label "Шаблон класса Меню"@ru ;
	v-ui:template """
<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="fa fa-cog fa-lg"></span> <span class="caret"></span></a>
<ul class="dropdown-menu" role="menu" about="@" rel="v-l:menuItem" template="v-l:MenuItemViewTemplate"></ul>
	"""
.
v-l:PsStrings
	rdf:type v-ui:StringPropertySpecification ;
	v-ui:forProperty rdfs:label, v-l:staticLink ;
	v-ui:forClass v-l:Menu ;
	rdfs:label "Rdfs:label, v-l:staticLink specification for Menu class"@en ;
	rdfs:label "Спецификация rdfs:label, v-l:staticLink для класса Меню"@ru ;
	v-ui:maxCardinality "1"^^xsd:integer ;
.
v-l:PsMenuItem
	rdf:type v-ui:ObjectPropertySpecification ;
	v-ui:forProperty v-l:menuItem ;
	v-ui:forClass v-l:Menu ;
	rdfs:label "V-l:menuItem specification for v-l:Menu class"@en ;
	rdfs:label "Спецификация v-l:menuItem для класса v-l:Menu"@ru ;
	v-ui:queryPrefix "('rdf:type' == 'v-l:Menu')"^^xsd:string ;
.

